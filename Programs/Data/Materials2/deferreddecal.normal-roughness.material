RenderTechnique:
    MaterialType: Decal
    Layers: ["OpaqueRenderLayer"]        
    RenderPassDeferred:
        Name: "gBufferPass"
        Layer: "DeferredDecals"
        Shader: "~res:/Materials2/Shaders/deferred-decal"        
        UniqueDefines: ["DEFERRED_DECAL"]
        UniquePins:
            - ["DECAL_TYPE", 5]
        RenderState:            
            depthFunc: "CMP_GEQUAL"
            cullMode: "FACE_FRONT"
            state: "STATE_DEPTH_TEST"
    RenderPassDeferredFetch:
        Name: "gBufferFetchPass"
        Layer: "DeferredDecals"
        Shader: "~res:/Materials2/Shaders/deferred-decal"        
        UniqueDefines: ["DEFERRED_DECAL", "USE_FRAMEBUFFER_FETCH"]
        UniquePins:
            - ["DECAL_TYPE", 5]
        RenderState:            
            depthFunc: "CMP_GEQUAL"
            cullMode: "FACE_FRONT"
            state: "STATE_DEPTH_TEST"